@model MVC_Store.Models.ViewModels.Account.LoginUserVM
@{
    ViewBag.Title = "Вход";
}


@if (TempData["SM"] != null)
{
    <div class="alert alert-success">
        @TempData["SM"]
    </div>
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

        <h2 class="form_title">Войдите в аккаунт</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <form class="form">

        <div class="form_group">

            <input type="text" name="Number" class="form_input" placeholder="Номер телефона">
            <br />
            @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })


        </div>
        <div class="form_group">

            <input type="password" name="Password" class="form_input" placeholder="Пароль">
            <br />
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

        </div>

        <div>
            
            <div>
                <div class="checkbox">
                    @Html.EditorFor(model => model.RememberMe)
                    Запомнить меня

                    @Html.ValidationMessageFor(model => model.RememberMe, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <br />

        <div>
            <div>
                <input type="submit" value="Войти" class="form_button" />
                &nbsp;<a href="/account/create-account">Зарегестрироваться</a>

            </div>
        </div>

    </form>
}

@section Scripts{

}
